<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/filter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dpx_15"
        android:layout_marginTop="@dimen/dpx_20"
        android:text="功效"
        android:textColor="@color/comm_color_222222"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/hide_img"
        android:layout_width="@dimen/dpx_42"
        android:layout_height="@dimen/dpx_38"
        android:padding="@dimen/dpx_15"
        android:src="@drawable/filter_open"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@id/filter_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/filter_name" />

    <com.bz.flowlayout.view.TagFlowLayout
        android:id="@+id/filter_tag_flow_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dpx_4"
        android:layout_marginTop="@dimen/dpx_15"
        android:layout_marginRight="@dimen/dpx_4"
        app:layout_constraintTop_toBottomOf="@id/filter_name"
        app:maxLines="2" />

</androidx.constraintlayout.widget.ConstraintLayout>