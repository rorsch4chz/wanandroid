<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/filter_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dpx_15"
        android:layout_marginTop="@dimen/dpx_20"
        android:textColor="@color/comm_color_222222"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="价格区间" />

    <TextView
        android:id="@+id/center_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dpx_20"
        android:layout_marginTop="@dimen/dpx_18"
        android:gravity="center"
        android:includeFontPadding="false"
        android:text="-"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/dpx_20"
        android:textColor="@color/comm_color_222222"
        android:textSize="14sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/filter_name" />

    <EditText
        android:id="@+id/left_edit"
        android:layout_width="0dp"
        android:layout_height="@dimen/dpx_25"
        android:layout_marginLeft="@dimen/dpx_15"
        android:layout_marginRight="@dimen/dpx_15"
        android:background="@drawable/shape_filter_edit_bg"
        android:gravity="center"
        android:hint="最低价"
        android:textColor="@color/comm_color_222222"
        android:textColorHint="@color/comm_text_color_999999"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/center_tv"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/center_tv" />

    <EditText
        android:id="@+id/right_edit"
        android:layout_width="0dp"
        android:layout_height="@dimen/dpx_25"
        android:layout_marginLeft="@dimen/dpx_15"
        android:layout_marginRight="@dimen/dpx_15"
        android:background="@drawable/shape_filter_edit_bg"
        android:gravity="center"
        android:hint="最高价"
        android:textColor="@color/comm_color_222222"
        android:textColorHint="@color/comm_text_color_999999"
        android:textSize="13sp"
        app:layout_constraintBottom_toBottomOf="@id/center_tv"
        app:layout_constraintLeft_toRightOf="@id/center_tv"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>